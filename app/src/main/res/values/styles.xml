<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:padding">@dimen/pad</item>
    </style>

    <style name="TextStyle.DarkHead">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/headText</item>
    </style>

    <style name="TextStyle.LightHead">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textSize">@dimen/headText</item>
    </style>

    <style name="TextStyle.DarkBody">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/bodyText</item>
    </style>

    <style name="TextStyle.LightBody">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textSize">@dimen/bodyText</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:padding">@dimen/pad</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">@dimen/icon</item>
        <item name="android:layout_height">@dimen/icon</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:contentDescription">@string/logoDescription</item>
    </style>

    <style name="ImageStyle.Dark">
        <item name="android:src">@drawable/reverse_alzheimers_association</item>
    </style>

    <style name="ImageStyle.Light">
        <item name="android:src">@drawable/alzheimers_association_logo</item>
    </style>

    <style name="ViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="CheckboxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/pad</item>
        <item name="android:textSize">@dimen/bodyText</item>
    </style>

    <style name="CheckboxStyle.Light">
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="CheckboxStyle.Dark">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>
