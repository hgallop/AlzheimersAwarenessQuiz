<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.alzheimersawarenessquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <View style="@style/ViewStyle" />

        <TextView
            style="@style/TextStyle.DarkHead"
            android:text="@string/welcome" />

        <TextView
            style="@style/TextStyle.DarkBody"
            android:text="@string/instructions" />

        <TextView
            style="@style/TextStyle"
            android:layout_marginBottom="@dimen/margin"
            android:text="@string/description"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/editName"
            android:maxLength="40"
            android:inputType="text"
            android:padding="@dimen/pad"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/submit_name"
            style="@style/ButtonStyle.Light"
            android:text="@string/continueButton" />

        <ImageView
            style="@style/ImageStyle"
            android:contentDescription="@string/logoDescription"/>

        <View style="@style/ViewStyle" />
    </LinearLayout>
</ScrollView>